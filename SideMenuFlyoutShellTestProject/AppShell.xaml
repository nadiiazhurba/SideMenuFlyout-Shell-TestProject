    <!--Side Menu Flyout with Tabs Combined Implementation-->
    <FlyoutItem Route="principles"
                Title="Principles"
                FlyoutDisplayOptions="AsMultipleItems">
            <ShellContent Route="sPrinciple"
                          Title="Single Responsibility"
                          Icon="cat.png"
                          Style="{StaticResource SShell}">
                <views:SPrinciple Title="Single Responsibility" />
            </ShellContent>
            <ShellContent Route="oPrinciple"
                          Title="Open-Closed"
                          Icon="bear.png"
                          Style="{StaticResource OShell}">
                <views:OPrinciple Title="Open-Closed"/>
            </ShellContent>
            <ShellContent Route="lPrinciple"
                          Title="Liskov Substitution"
                          Icon="monkey.png"
                          Style="{StaticResource LShell}">
                <views:LPrinciple Title="Liskov Substitution"/>
            </ShellContent>
            <ShellContent Route="iPrinciple"
                          Title="Interface Segregation"
                          Icon="elephant.png"
                          Style="{StaticResource IShell}">
                <views:IPrinciple Title="Interface Segregation"/>
            </ShellContent>
            <ShellContent Route="dPrinciple"
                          Title="Dependency Inversion"
                          Icon="dog.png"
                          Style="{StaticResource DShell}">
                <views:DPrinciple Title="Dependency Inversion"/>
            </ShellContent>
    </FlyoutItem>
